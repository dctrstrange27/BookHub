<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragment.books">

<!--    <androidx.fragment.app.FragmentContainerView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/frag"-->
<!--        />-->

    <ScrollView
        android:id="@+id/home"
        android:nestedScrollingEnabled="false"
        android:fillViewport="true"
        android:background="@drawable/background"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pacifico"
                    android:padding="5dp"
                    android:text="All Books"
                    android:textAlignment="center"
                    android:textColor="#5C5A5A"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/muli_extrabold"
                    android:padding="5dp"
                    android:text="Adventure"
                    android:textAlignment="center"
                    android:textColor="#5C5A5A"
                    android:textSize="18sp" />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:layout_height="300dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="230dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/king"
                        app:cardElevation="10dp">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:gravity="center_horizontal"
                            android:background="#26252E"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/adv_1_name"
                                android:textAlignment="center"
                                android:fontFamily="@font/mulish_semibold"
                                android:padding="5dp"
                                android:textColor="#E8E4E4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="King Solomon's Mines"
                                android:textSize="12sp" />
                            <ImageView
                                android:id="@+id/adv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/king_jolomon"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="230dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:gravity="center_horizontal"
                            android:background="#26252E"
                            android:orientation="vertical">
                            <TextView
                                android:textAlignment="center"
                                android:fontFamily="@font/mulish_semibold"
                                android:padding="5dp"
                                android:textColor="#3E3C3C"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Mostly Dark"
                                android:textSize="12sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mostly_dark"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="230dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:gravity="center_horizontal"
                            android:background="#26252E"
                            android:orientation="vertical">
                            <TextView
                                android:textAlignment="center"
                                android:fontFamily="@font/mulish_semibold"
                                android:padding="5dp"
                                android:textColor="#E8E4E4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Dracula"
                                android:textSize="12sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/dracula"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="230dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:gravity="center_horizontal"
                            android:background="#26252E"
                            android:orientation="vertical">
                            <TextView
                                android:textAlignment="center"
                                android:fontFamily="@font/mulish_semibold"
                                android:padding="5dp"
                                android:textColor="#E8E4E4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text=" Beach Town"
                                android:textSize="12sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/beach_town"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="230dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:gravity="center_horizontal"
                            android:background="#26252E"
                            android:orientation="vertical">
                            <TextView
                                android:textAlignment="center"
                                android:fontFamily="@font/mulish_semibold"
                                android:padding="5dp"
                                android:textColor="#E8E4E4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text=" Across Asia on a Bicycle"
                                android:textSize="12sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/across"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="230dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:gravity="center_horizontal"
                            android:background="#26252E"
                            android:orientation="vertical">
                            <TextView
                                android:textAlignment="center"
                                android:fontFamily="@font/mulish_semibold"
                                android:padding="5dp"
                                android:textColor="#E8E4E4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Computer Jargon"
                                android:textSize="12sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/computer_jargon"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>