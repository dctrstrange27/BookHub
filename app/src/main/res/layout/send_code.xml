<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_box"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/closeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_baseline_close_24" />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="-15dp"
        android:paddingBottom="10dp"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/verification"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/muli_extrabold"
            android:gravity="center"
            android:text="Email Verification"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/mulish_semibold"
            android:gravity="center"
            android:text="We've send a code to your email account!"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/clickEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:fontFamily="@font/mulish_semibold"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#1459E4"
            android:onClick="onClick"
            android:clickable="true"
            android:textStyle="bold" />
        <EditText
            android:padding="10dp"
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter code"
            android:backgroundTint="@color/trans"
            android:drawableLeft="@drawable/code"
            android:drawablePadding="5dp"
            android:textSize="15sp"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/warning"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't received a code? Check email if Existing"
            android:textSize="14sp"
            android:textColor="#201E1E"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/mulish_semibold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:id="@+id/expired"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Code will expired in"
            android:textColor="#201E1E"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/mulish_semibold"
            />
        <TextView
            android:paddingTop="9dp"
            android:textColor="#1D7EE6"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/mulish_semibold"
            />
        <TextView
            android:id="@+id/countdown"
            android:paddingTop="9dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1D7EE6"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/mulish_semibold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:id="@+id/resend"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1D7EE6"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/mulish_semibold"
            />


    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="verify"
        app:cornerRadius="17dp"
        android:backgroundTint="#0C0C0C"
        />



</LinearLayout>