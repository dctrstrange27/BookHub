<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/signup"
            android:layout_width="321dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/mulish_semibold"
            android:text="Continue"
            android:textAllCaps="false"
            android:typeface="normal"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.847" />

        <EditText
            android:id="@+id/username"
            android:layout_width="310dp"
            android:layout_height="42dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="username"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/email"
            android:layout_width="310dp"
            android:layout_height="42dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="email"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/conPassword"
            android:layout_width="310dp"
            android:layout_height="43dp"
            android:layout_marginBottom="24dp"
            android:drawableLeft="@drawable/ic_baseline_safety_check_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="confirm_password"
            android:inputType="textPassword"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/signup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/mulish_semibold"
            android:text="New to BookRef?"
            android:textColor="#423E3E"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup"
            app:layout_constraintVertical_bias="0.425" />

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="120dp"
            android:clickable="true"
            android:fontFamily="@font/mulish_semibold"
            android:onClick="onClick"
            android:text=" Sign in"
            android:textColor="#2E5FDC"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/pacifico"
            android:text="Sign up"
            android:textAlignment="center"
            android:textColor="#423E3E"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="381dp"
            android:layout_height="289dp"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/signup_pic" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass"
            android:layout_width="310dp"
            android:layout_height="43dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/conPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleEnabled="true"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="310dp"
                android:layout_height="42dp"
                android:backgroundTint="@color/trans"
                android:drawableStart="@drawable/ic_baseline_password_24"
                android:drawablePadding="5dp"
                android:hint="password"
                android:inputType="textPassword"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>